<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/layout_navbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple"
        android:orientation="horizontal"
     >
        <ImageView
            android:id="@+id/ic_all_messages"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/ic_all_inclusive"
            android:background="@color/purple"
            android:layout_gravity="center_vertical"
            app:tint="@color/dark_purple"
            />

        <ImageView
            android:id="@+id/ic_smile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/ic_smile"
            android:background="@color/purple"
            android:layout_gravity="center_vertical"
            app:tint="@color/dark_purple"
            />

        <ImageView
            android:id="@+id/ic_sunny"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/ic_sunny"
            android:background="@color/purple"
            android:layout_gravity="center_vertical"
            app:tint="@color/dark_purple"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text_user_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user"
        android:layout_below="@id/layout_navbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/cabin"
        />

    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cabin"
        android:padding="16dp"
        android:text="@string/phrases_motivation"
        android:textAlignment="center"
        android:textSize="20sp" />

    <View
        android:layout_width="128dp"
        android:layout_height="4dp"
        android:background="@color/dark_purple"
        android:elevation="4dp"
        android:layout_below="@id/text_phrase"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/new_phrase"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/cabin"
        android:backgroundTint="@color/dark_purple"
        />
</RelativeLayout>